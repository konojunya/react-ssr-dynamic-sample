{
  "compilerOptions": {
    "strict": true,
    "pretty": true,
    "removeComments": false,
    "noEmit": false,
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "module": "commonjs",
    "target": "ES2017",
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "./",
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"]
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
